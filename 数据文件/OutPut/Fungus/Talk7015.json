    {
      "ItemID": 322,
      "Name": "剧情",
      "Description": "剧情",
      "Position": "(-2486.014,-1222.879)",
      "Commands": [
        {
          "ItemID": 323,
          "CmdType": "Fungus.Say",
          "AvatarIDInt": 0,
          "AvatarBindKey": "",
          "StoryText": "你隐约观察到，虽然他功法修为极高，所施展的神通亦然强劲，可一招一式皆在你预料之内，并无多少变化。",
          "Description": "",
          "AvatarIDSetType": "Normal"
        },
        {
          "ItemID": 326,
          "CmdType": "Fungus.Say",
          "AvatarIDInt": 0,
          "AvatarBindKey": "",
          "StoryText": "随着你奇招频出，他的神情开始慌乱，动作也变得僵硬起来。",
          "Description": "",
          "AvatarIDSetType": "Normal"
        },
        {
          "ItemID": 324,
          "CmdType": "Fungus.Say",
          "AvatarIDInt": 1,
          "AvatarBindKey": "",
          "StoryText": "青麟兄？",
          "Description": "",
          "AvatarIDSetType": "Normal"
        },
        {
          "ItemID": 327,
          "CmdType": "Fungus.Say",
          "AvatarIDInt": 0,
          "AvatarBindKey": "",
